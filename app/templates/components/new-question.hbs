{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="post">post</label>
        {{input value=post id="post"}}
      </div>
      <button class="btn-custom btn-sm" {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn-custom btn-sm" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
